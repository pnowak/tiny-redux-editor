{
  "parser": "babel-eslint",
  "plugins": [
    "import"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors"
  ],
  "settings": {
    "import/ignore": [
      "node_modules",
      "modules/index.js"
    ]
  },
  "rules": {
    "array-bracket-spacing": [ 2, "always" ],
    "semi": [ 2, "never" ]
  }
}